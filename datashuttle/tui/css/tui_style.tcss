
/* Buttons -------------------------------------------------------------------------- */

Button {
    background: $panel;
    border: tall $panel-lighten-1;
}
Button:focus {
    text-style: bold;
}
Button:hover {
    background: $panel-lighten-2;
}

/* Light Mode Buttons */

Button:light {
    background: $boost;
    border: tall $panel-darken-3;
}
Button:light:hover {
    background: $panel-darken-3;
}

/* Main Menu Buttons --------------------------------------------------------------------- */

#all_main_menu_buttons {
    dock: right;
    height: 3;
    layer: top;
}

/* Header --------------------------------------------------------------------------- */

Header {
    margin: 0 0 1 0;
}

/* Checkboxes ----------------------------------------------------------------------- */

ToggleButton {
    margin: 0 0 0 1;
    content-align: left middle;
    width: auto;
    background: transparent;
    padding: 0;
    border: transparent;
}
ToggleButton:focus > .toggle--label {
    text-style: none;
}
ToggleButton.-on > .toggle--button {
    color: $success;
}
ToggleButton:hover > .toggle--button {
    background: $panel-lighten-3;
}

/* Light mode Checkboxes */

ToggleButton:light.-on > .toggle--button {
    color: $text;
}
ToggleButton:light:hover > .toggle--button {
    background: $panel-darken-3;
}

/* Input ---------------------------------------------------------------------------- */

Input {
    border: tall $panel-lighten-1;
}

Input:light {
    border: tall $panel-darken-3;
}

/* RadioButtons --------------------------------------------------------------------- */

RadioButton {
    width: auto;
}
